<p id="notice"><%= notice %></p>

<h1>Boredoms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boredoms.each do |boredom| %>
      <tr>
        <td><%= boredom.name %></td>
        <td><%= boredom.activity %></td>
        <td><%= link_to 'Show', boredom %></td>
        <td><%= link_to 'Edit', edit_boredom_path(boredom) %></td>
        <td><%= link_to 'Destroy', boredom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Boredom', new_boredom_path %>
