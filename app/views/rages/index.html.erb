<p id="notice"><%= notice %></p>

<h1>Rages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rages.each do |rage| %>
      <tr>
        <td><%= rage.name %></td>
        <td><%= rage.activity %></td>
        <td><%= link_to 'Show', rage %></td>
        <td><%= link_to 'Edit', edit_rage_path(rage) %></td>
        <td><%= link_to 'Destroy', rage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rage', new_rage_path %>
